}
.cancellike{
  height:60rpx;
  width:60rpx;
  margin-top: 5rpx;
}
.dsp{
  height:55%;
  width: 100%;
  text-align: left;
  padding-left:10px;
  font-size:15px;
  color: black;
  /* border:solid blue; */
}
.tab{
  color:rgb(252, 136, 58);
}
.price{
  height:25%;
  text-align: right;
  line-height: 50rpx;
