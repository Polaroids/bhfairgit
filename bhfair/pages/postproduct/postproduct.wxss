/* pages/postproduct/postproduct.wxss */
page{
  height: 100%;
}
.container{
  height: 100%;
  width: 100%;
  display: flex;
  padding: 0px 10px 0px 10px;
  flex-direction:column; 
  justify-content: flex-start;
}
.title{
  width:100%;
  text-align: center;
}
.photo_btn{
  width:100%;
  height: 100px;
  display: flex;
}
.photo_btn button{
  height:100px;
  width:120px;
  display: flex;
  justify-content:center;
  align-items: center;
  border: none;
  padding:0;
}
.img_list{
  height: 100%;
  display: flex;
  white-space: nowrap;
}
.img_list button{
  height: 100px;
  width: 100px;
  display: inline-block;
}
.img{
  height: 100px;
  width: 100px;
}
#camera_img{/*相机图片*/
  height: 50px;
  width:60px;
}
.detail_info{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.amount{
  display: flex;
  width:120px;
}
.input{
  display: flex;
  flex-direction: row;
}
