page{
  height:100%;
}
.container{
  height: 100%;
  padding: 0;
  background-color: rgb(248, 248, 248);
}
#name{
  width: 100%;
  height: 10%;
  background-color: #20c9f9;
  text-align: center;
  color: white;
}
#chatbox{
  width:100%;
  height: 85%;
  background-color: rgb(248, 248, 248);
}
#chattool{
  width: 100%;
  height:15%;
  background-color: white;
  display: flex;
  justify-content: center;
  align-items: center;
}
#kb{
  height: 32px;
  width:32px;
  margin-right: 5px;
}
#kb button{
  height: 100%;
  width:100%;
  padding:0;
  border: none;
}
#input{
  width:80%;
  height: 80%;
  border-radius: 5px;
  padding-left: 10px;
  background-color: rgb(245, 241, 241);
}
.box{
  width: 100%;
  display: flex;
}
.noavatar{
  height: 100%;
  width: 100%;
}
.avatar{
  height: 100%;
  width: 60px;
}
.avatar image{border-radius: 50%;}
.time_content{
  width:100%;
  display: flex;
  flex-direction: column;
  font-size: 20px;
}
.time{
  margin-top: 10px;
  color: rgb(155, 153, 153);
  font-size:15px;
}
.bub{
  /* border:1px solid red; */
  background-color: white;
}